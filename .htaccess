<IfModule mod_rewrite.c>
    Options -MultiViews

		# Tell PHP that the mod_rewrite module is ENABLED.
    SetEnv HTTP_MOD_REWRITE On

    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# protect database
<FilesMatch data.db>
    Order allow,deny
    Deny from all
</FilesMatch>

